from tkinter import *
from tkinter import messagebox

def Dobutok():
    try:
        N = int(edit1.get())
        if N < 1:
            raise ValueError("Число повинно бути більше 0")
        d = 1
        for i in range(1, N + 1):
            d *= i
        label2['text'] = f"Добуток чисел від 1 до {N} = {d}"
    except ValueError as e:
        messagebox.showerror("Помилка", f"Некоректне введення: {e}")

root = Tk()
root.geometry("450x150")
root.title("Добуток чисел")

# створити напис та поле введення
label1 = Label(root, text="Введіть число:")
label1.place(x=20, y=20)
edit1 = Entry(root)
edit1.place(x=200, y=20, width=240)

# створити напис, записати результат
label2 = Label(root, text="")
label2.place(x=200, y=50)

# створити кнопку
button1 = Button(root, text="Обчислити", command=Dobutok)
button1.place(x=200, y=90, width=240)

root.mainloop()