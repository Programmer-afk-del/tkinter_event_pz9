from tkinter import *

def calculate_sum():
    try:
        a = float(entry_a.get())
        b = float(entry_b.get())
        result.set(a + b)
    except ValueError:
        result.set('Помилка: введіть числові значення')

root = Tk()
root.title('Обчислення суми двох чисел')
root.geometry('400x150')

result = StringVar()

Label(root, text='Введіть перше число:').grid(row=0, column=0, padx=10, pady=10, sticky=W)
Label(root, text='Введіть друге число:').grid(row=1, column=0, padx=10, pady=10, sticky=W)
Label(root, text='Сума:').grid(row=2, column=0, padx=10, pady=10, sticky=W)

entry_a = Entry(root)
entry_b = Entry(root)

entry_a.grid(row=0, column=1, padx=10, pady=10)
entry_b.grid(row=1, column=1, padx=10, pady=10)

Label(root, textvariable=result).grid(row=2, column=1, padx=10, pady=10)

Button(root, text='Обчислити', command=calculate_sum).grid(row=3, column=0, columnspan=2, pady=10)

root.mainloop()