from tkinter import *
from tkinter import messagebox

def factorial():
    try:
        N = int(entry.get())
        if N < 0:
            raise ValueError("Число повинно бути невід'ємним")
        f = 1
        for i in range(1, N + 1):
            f *= i
        result_label.config(text=f"Факторіал числа {N}! = {f}")
    except ValueError as e:
        messagebox.showerror("Помилка", f"Некоректне введення: {e}")

root = Tk()
root.geometry("420x150")
root.title("Факторіал")

# напис та поле введення
label = Label(root, text="Введіть число N:")
label.place(x=20, y=20)
entry = Entry(root)
entry.place(x=200, y=20, width=200)

# напис для виведення результату
result_label = Label(root, text="")
result_label.place(x=200, y=50)

# кнопка для обчислення
button = Button(root, text="Обчислити", command=factorial)
button.place(x=200, y=90, width=200)

root.mainloop()